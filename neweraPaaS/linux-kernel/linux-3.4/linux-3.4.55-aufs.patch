+			m = mnt->mnt_parent;
+			mnt->mnt_mountpoint = mnt->mnt.mnt_root;
+			mnt->mnt_parent = mnt;
+			m->mnt_ghosts--;
+			br_write_unlock(vfsmount_lock);
