+/* generalized cpup_simple() with h_open_pre/post() calls */
+int au_sio_cpup_simple_h_open(struct dentry *dentry, aufs_bindex_t bdst,
+			      loff_t len, unsigned int flags,
+			      struct au_pin *pin, aufs_bindex_t bsrc)
